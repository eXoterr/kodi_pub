    <language>en</language> 
    <platform>all</platform>
    <license>GPL-3.0-or-later</license>
    <source>https://github.com/eXoterr/plugin.fxml.helper</source>
    <news>v1.2.6 (13/03/2021)
      [fix] some errors
      [removed] add to library feauture (unstable)
    </news>
    <assets>
        <icon>icon.png</icon>
    </assets>
  </extension>
</addon><addon id="repository.exoterr" name="eXoterr Repo" version="1.0.1" provider-name="eXoterr">
